
<div class="right_col" role="main">
  <div class="page-title">
    <div class="title-left">
      <h1>Sucursales del negocio</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row">
      <div class="col-ms-12">
        <div class="div-add-button">

           <%= link_to new_sucursal_path, {remote: true, class: "btn btn-info btn-lg btn-add", id: "anadir-sucursal-btn"}  do %>
             <span class="glyphicon glyphicon-plus-sign circleglyphicon" style=""></span>
             Añadir sucursal
          <%end%>

        </div>
      </div>
    </div>
    
    <hr style="border-style: solid; border-width: 2px;">
    
    <div class="row">
      <div>

        <table class="table table-striped responsive-utilities jambo_table data-table">
          <thead>
            <tr>
              <th class="column-title">Nombre Sucursal</th>
              <th class="column-title">Representante</th>
              <th class="column-title">Direccion</th>
              <th class="column-title">Municipio</th>
              <th class="column-title">Estado</th>
              <th class="column-title"></th>
              <th class="column-title"></th>
              
            </tr>
          </thead>

          <tbody id="tb_sucursales">
            <%= render @sucursals %>
          </tbody>        
        </table>
        <%= render 'sucursals/modalSucursales' %>
      </div>
    </div>
  </div>
    
  <script>
    $(document).ready(function(){
  
      $('.data-table').DataTable({
        responsive: true,
        "language":{
          "info": "Mostrar pag _PAGE_ de _PAGES_",
          "lengthMenu": "Mostrar _MENU_ registros",
          "zeroRecords": "No hay coincidencias",
          "search": "Buscar: _INPUT_",
          "infoFiltered": " - encontrados en _MAX_ registros",
          "paginate": {
            "previous": "Anterior",
            "next" : "siguiente",
            "last" : "último",
            "first" : "primero"
          }
        }
      });
    });
  </script>
</div>
