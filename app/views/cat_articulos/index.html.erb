<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <h1>Categorias de artículo</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div>
      <p id="notice"><%= notice %></p>

      

      <table class="table table-striped responsive-utilities jambo_table display responsive no-wrap" id="tabla_categorias">
        <thead>
          <tr>
            <th class="column-title">Nombre de Categoría</th>
            <th class="column-title">Descripción</th>
            <th class="column-title">Categoría Padre</th>
            <th colspan="3" class="column-title"></th>
          </tr>
        </thead>

        <tbody>
          <% @cat_articulos.each do |cat_articulo| %>
            <tr>
              <td><%= cat_articulo.nombreCatArticulo %></td>
              <td><%= cat_articulo.descripcionCatArticulo %></td>
              <td><%= cat_articulo.padre %></td>
              <td><%= link_to 'Mostrar', cat_articulo,  class: "btn btn-primary btn-xs" %><i class="fa fa-folder"></i></td>
              <td><%= link_to 'Editar', edit_cat_articulo_path(cat_articulo), class: "btn btn-info btn-xs" %><i class="fa fa-pencil"></i></td>
              <td><%= link_to 'Borrar', cat_articulo, method: :delete, data: { confirm: '¿Seguro que deseas eliminar esta categoría?' }, class: "btn btn-danger btn-xs" %><i class="fa fa-trash-o"></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nueva categoria', new_cat_articulo_path, class: "btn btn-default" %>
    </div>
  </div>
  <script>
    $(window).ready(function(){
      $('#tabla_categorias').DataTable({
            responsive: true,
            "language":{
              "info": "Mostrar pag _PAGE_ de _PAGES_",
              "lengthMenu": "Mostrar _MENU_ registros",
              "zeroRecords": "No hay coincidencias",
              "search": "Buscar: _INPUT_",
              "infoFiltered": " - encontrados en _MAX_ registros",
              "paginate": {
                "previous": "Anterior",
                "next" : "siguiente",
                "last" : "último",
                "first" : "primero"
              }
            }
          });
    });
  </script>
</div>

    

