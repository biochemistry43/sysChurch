<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <h1>Categorias de art√≠culos</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  
  <div class="col-md-10 col-sm-10 col-xs-10">
    <div class="x_panel" style="height: 600px;">
      <p id="notice"><%= notice %></p>

      

      <table class="table table-striped responsive-utilities jambo_table">
        <thead>
          <tr>
            <th class="column-title">Nombre</th>
            <th class="column-title">Descripcion</th>
            <th class="column-title">Categoria Padre</th>
            <th colspan="3" class="column-title"></th>
          </tr>
        </thead>

        <tbody>
          <% @cat_articulos.each do |cat_articulo| %>
            <tr>
              <td><%= cat_articulo.nombreCatArticulo %></td>
              <td><%= cat_articulo.descripcionCatArticulo %></td>
              <td><%= cat_articulo.padre %></td>
              <td><%= link_to 'Show', cat_articulo %></td>
              <td><%= link_to 'Edit', edit_cat_articulo_path(cat_articulo) %></td>
              <td><%= link_to 'Destroy', cat_articulo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Crear categoria', new_cat_articulo_path %>
    </div>
  </div>
</div>

    

