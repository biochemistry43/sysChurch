<%= form_for @cat_articulo, :html=> {:class=>'form-horizontal form-label-left input_mask'} do |f| %>
  <% if @cat_articulo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cat_articulo.errors.count, "error") %> prohibited this cat_articulo from being saved:</h2>

      <ul>
      <% @cat_articulo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :nombreCatArticulo %><br>
    <%= f.text_field :nombreCatArticulo, class: "form-control has-feedback-left"%>
    <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :descripcionCatArticulo %><br>
    <%= f.text_field :descripcionCatArticulo, class: "form-control has-feedback-left"%>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :idCategoriaPadre %><br>
    <%= f.collection_select(:idCategoriaPadre, CatArticulo.all, :id, :nombreCatArticulo)%>
    <!--<%= f.number_field :idCategoriaPadre, class: "form-control has-feedback-left" %>-->
  </div>
  <div class="ln_solid"></div>
  <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
    <%= f.submit %>
  </div>
<% end %>
