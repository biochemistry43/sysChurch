<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <h1>Clientes</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  
  <div class="col-md-10 col-sm-10 col-xs-10">
    <div class="x_panel" style="height: 600px;">
      <p id="notice"><%= notice %></p>

      <h1>Clientes</h1>

      <table class="table table-striped responsive-utilities jambo_table">
        <thead>
          <tr>
            <th class="column-title">Nombre</th>
            <th class="column-title">Direccion</th>
            <th class="column-title">Municipio</th>
            <th class="column-title">Estado</th>
            <th class="column-title">Email</th>
            <th colspan="3" class="column-title"></th>
          </tr>
        </thead>

        <tbody>
          <% @clientes.each do |cliente| %>
            <tr>
              <td><%= cliente.nombre %></td>
              <td><%= cliente.direccionCalle << " " << cliente.direccionNumeroExt << " " << cliente.direccionNumeroInt << ", Colonia:" << cliente.direccionColonia  << ", C.P. : " << cliente.direccionCp%></td>
              <td><%= cliente.direccionMunicipio %></td>
              <td><%= cliente.direccionEstado %></td>
              <td><%= cliente.email %></td>
              <td><%= link_to 'Mostrar', cliente %></td>
              <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
              <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Â¿Desea eliminar este cliente?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nuevo Cliente', new_cliente_path %>
    </div>
  </div>
</div>
