<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <h1>Clientes</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row">
      <div class="div-add-button">
        <%= link_to new_cliente_path, {class: "btn btn-info btn-lg btn-add"} do %>  
          <span class="glyphicon glyphicon-plus-sign circleglyphicon" style=""></span>
          Añadir Cliente
        <%end%>
      </div>  
    </div>

    <hr style="border-style: solid; border-width: 2px;">

    <div class="row">
      <div>

        <table class="table table-striped responsive-utilities jambo_table data-table">
          <thead>
            <tr>
              <th class="column-title">Nombre</th>
              <th class="column-title">Direccion</th>
              <th class="column-title">Municipio</th>
              <th class="column-title">Estado</th>
              <th class="column-title">Email</th>
              <th class="column-title"></th>
              <th class="column-title"></th>
              <th class="column-title"></th>
            </tr>
          </thead>

          <tbody>
            <% @clientes.each do |cliente| %>
              <tr>
                <td><%= cliente.nombre %></td>
                <td><%= cliente.direccionCalle.to_s  << " " << cliente.direccionNumeroExt.to_s << " " << cliente.direccionNumeroInt.to_s << ", Colonia:" << cliente.direccionColonia.to_s  << ", C.P. : " << cliente.direccionCp.to_s %></td>
                <td><%= cliente.direccionMunicipio %></td>
                <td><%= cliente.direccionEstado %></td>
                <td><%= cliente.email %></td>
                <td><%= link_to 'Mostrar', cliente, class: "btn btn-primary btn-xs" %><i class="fa fa-folder"></i></td>
                <td><%= link_to 'Editar', edit_cliente_path(cliente), class: "btn btn-info btn-xs" %><i class="fa fa-pencil"></i></td>
                <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: '¿Desea eliminar este cliente?' }, class: "btn btn-danger btn-xs" %><i class="fa fa-trash-o"></i></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
  </div>
  <script>
    $(document).ready(function(){
  
      $('.data-table').DataTable({
        responsive: true,
        "language":{
          "info": "Mostrar pag _PAGE_ de _PAGES_",
          "lengthMenu": "Mostrar _MENU_ registros",
          "zeroRecords": "No hay coincidencias",
          "search": "Buscar: _INPUT_",
          "infoFiltered": " - encontrados en _MAX_ registros",
          "paginate": {
            "previous": "Anterior",
            "next" : "siguiente",
            "last" : "último",
            "first" : "primero"
          }
        }
      });
    });
  </script>
</div>
