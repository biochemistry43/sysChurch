<tr id="cliente_<%= cliente.id%>" class="rowsearch">
  <td style="text-align: center;"><%= cliente.nombre_completo %></td>
  <td style="text-align: center;"><%= cliente.direccionCalle.to_s  << " " << cliente.direccionNumeroExt.to_s << " " << cliente.direccionNumeroInt.to_s << " " << cliente.direccionColonia.to_s  << " " << cliente.direccionCp.to_s %></td>
  <td style="text-align: center;"><%= cliente.direccionMunicipio %></td>
  <td style="text-align: center;"><%= cliente.direccionEstado %></td>
  <td style="text-align: center;"><%= cliente.email %></td>

  <td style="text-align: center;">
    <% if can? :update, cliente %>
      <%= link_to 'Editar', edit_cliente_path(cliente), html_options = {class: "btn btn-info btn-xs", remote: true} %><i class="fa fa-pencil"></i>	
    <% end %>
  </td>

  <td style="text-align: center;">
    <% if can? :destroy, cliente %>
      <%= link_to 'Borrar', cliente, remote: true, method: :delete, data: { confirm: "Â¿Borrar Cliente: #{cliente.nombre}?"}, class: "btn btn-danger btn-xs" %><i class="fa fa-trash-o">
    <% end %>
  </td>
</tr>