<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <h1>Categorías de cancelación de ventas</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="row">
      <div class="div-add-button">
        <% if can? :create, Cliente %>
          <%= link_to new_cat_venta_cancelada_path, {remote: true, class: "btn btn-info btn-round btn-add", id: "anadir-categoria-btn"}  do %>
             <span class="fa fa-plus-square" style=""></span>
             Crear categoría
          <%end%>
        <% end %>
        
      </div>  
    </div>

    <hr style="border-style: solid; border-width: 2px;">

    <div class="row">
      <div>

        <table class="table table-striped responsive-utilities jambo_table data-table">
          <thead>
            <tr>
              <th class="column-title">Clave</th>
              <th class="column-title">Descripción</th>
              <th class="column-title"></th>
              <th class="column-title"></th>
            </tr>
          </thead>

          <tbody id="tb_cat_ventas_canceladas">
            <%= render @cat_venta_canceladas%>
          </tbody>
        </table>
        <%= render 'modalCatVentasCanceladas'%>
      </div>
    </div>
    
  </div>
  <script>
    $(document).ready(function(){
  
      $('.data-table').DataTable({
        responsive: true,
        "language":{
          "info": "Mostrar pag _PAGE_ de _PAGES_",
          "lengthMenu": "Mostrar _MENU_ registros",
          "zeroRecords": "No hay coincidencias",
          "search": "Buscar: _INPUT_",
          "infoFiltered": " - encontrados en _MAX_ registros",
          "paginate": {
            "previous": "Anterior",
            "next" : "siguiente",
            "last" : "último",
            "first" : "primero"
          }
        }
      });
    });
    
  </script>


