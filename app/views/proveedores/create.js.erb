$('#modalProveedores').modal('toggle');
$('#tb_proveedores').append('<%= j render (@proveedor) %>');
if (location.pathname != "/compras/new"){
	location.reload(false);
}
else{
  $('#compra_proveedor_id').append($('<option>', {
      value: "<%= @proveedor.id %>",
      text: "<%= @proveedor.nombre %>"
    }
  ));
}
