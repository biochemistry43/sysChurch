<%if @factura.estado_factura.eql?("Activa")%>
  $('#modal-emails-title').parent().css("background-color", "#92c33c");
  $('#modal-emails-title').parent().css("color", "white");
  $('#modal-emails-title').html("<i class='glyphicon glyphicon-envelope'></i> Envío de factura por email");
<%elsif @factura.estado_factura.eql?("Cancelada") %>
  $('#modal-emails-title').parent().css("background-color", "#C9302C");
  $('#modal-emails-title').parent().css("color", "white");
  $('#modal-emails-title').html("<i class='glyphicon glyphicon-envelope'></i> Envío del acuse de cancelación por email");
<%end%>

// Render the new form
$('.modal-body-emails').html('<%= j render("enviar_email") %>');

// Show the dynamic dialog
$('#modalEmails').modal("show");

// Set focus to the first element
$('#modalEmails').on('shown.bs.modal', function () {
	  $('.first_input').focus();
