<div class="x_content">
  <%= form_for @presentacion_producto, remote: true, :html=> {:class=>'form-horizontal form-label-left', :role=>"form"} do |f| %>
    
    <div class="item form-group<%= @presentacion_producto.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :nombre, "Descripción de la presentación: ", {class: "control-label col-md-3 col-sm-3 col-xs-12"} %>
      <div class="col-md-6 col-sm-6 col-xs-12 input-group">
        <span class="input-group-addon"><i class="fa fa-cube"></i></span>
        <%= f.text_field :nombre, {class: "form-control col-md-7 col-xs-12 text_field first_input", :placeholder=>"Ej pieza, galón, caja de 1 kilo, etc..."} do%>
        <%end%>
        <%if @presentacion_producto.errors[:nombre].any? %>
          <p class="bg-danger"><%= @presentacion_producto.errors[:nombre].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <%= f.submit @presentacion_producto.new_record? ? "Crear presentación" : "Actualizar presentación", :class => "btn btn-success"%>
    </div>
  <% end %>
</div>
