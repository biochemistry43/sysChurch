<div class="right_col" role="main">
  <% flash.each do |key, value| %>
    <script>
      $(document).ready(function(){
        new PNotify({
          title: 'Mensaje de la aplicación',
          text: '<%= value %>!',
          type: 'success'
        });
      });
    </script>
  <%end%>

  <div class="page-title">
    <div class="title_left">
      <h1>Movimientos caja chica</h1>
      <h3>Saldo en caja chica: $<%= @saldo %></h3>
    </div>
  </div>
  <div class="clearfix"></div> 
  <div class="col-md-12 col-sm-12 col-xs-12 ">
    <div class="row">
      <div class="col-ms-12">
        <div class="div-left-buttons">
        </div>

        <div class="div-add-button">
          <%= link_to url = {controller:"caja_chicas", action:"new"}, html_options =  {remote: true, class: "btn btn-primary btn-lg btn-add", title: "Reposición de caja chica"} do %>  
            <span class="fa fa-plus" style=""></span>
            Reposición
          <% end %>
        </div>
      </div>
    </div>
    

    <hr style="border-style: solid; border-width: 2px;">

    <div class="row">
      <div>

        <table class="table table-striped responsive-utilities jambo_table data-table" id="tabla_caja_chica">
          <thead>
            <tr>
              <th class="column-title" style="text-align: center;" >Fecha</th>
              <th class="column-title" style="text-align: center;">Entrada</th>
              <th class="column-title" style="text-align: center;">Salida</th>
              <th class="column-title" style="text-align: center;">concepto</th>
              <th class="column-title" style="text-align: center;">Detalles</th>
              
            </tr>
          </thead>

          <tbody id="tb_caja_chica">
            <%= render @caja_chicas %>
          </tbody>
        </table>
        <%= render "modalCajaChica" %>
      </div>
    </div>
    
  </div>

  
</div>