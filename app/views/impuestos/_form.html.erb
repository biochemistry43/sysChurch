
<%= form_for @impuesto  , remote: true, :html=> { :class=>'form-horizontal form-label-left', :role=>"form"  } do |f| %>

  <div class="item form-group<%= @impuesto.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :nombre, "Nombre: ", {class: "control-label col-md-3 col-sm-3 col-xs-12"} %>
    <div class="col-md-6 col-sm-6 col-xs-12 input-group">
      <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
      <%= f.text_field :nombre, {class: "form-control col-md-7 col-xs-12 text_field first_input", :placeholder=>"nombre de impuesto"} do%>
      <%end%>
      <%if @impuesto.errors[:nombre].any? %>
        <p class="bg-danger"><%= @impuesto.errors[:nombre].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @impuesto.errors[:tipo].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :tipo, "Tipo: ", {class: "control-label col-md-3 col-sm-3 col-xs-12"} %>
    <div class="col-md-6 col-sm-6 col-xs-12 input-group">
      <span class="input-group-addon"><i class="fa fa-tag"></i></span>
      <!--Impuesto Sobre la Renta (ISR) =Retención
          Impuesto al Valor Agregado (IVA) =>Traslado
          Impuesto Especial sobre Producción y Servicios (IEPS) =>Traslado
        -->
      <%= f.select(:tipo,
        [['Federal', 'Federal'],
        ['Local', 'Local'],
        ['Otro', 'Otro']],
        {}, { class: "form-control col-md-7 col-xs-12 text_field" }) %>

      <%if @impuesto.errors[:tipo].any? %>
        <p class="bg-danger"><%= @impuesto.errors[:tipo].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @impuesto.errors[:porcentaje].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :porcentaje, "Porcentaje: ", {class: "control-label col-md-3 col-sm-3 col-xs-12"} %>
    <div class="col-md-6 col-sm-6 col-xs-12 input-group">
      <span class="input-group-addon"><i class=""><b><big>%</big></b></i></span>
      <%= f.text_field :porcentaje, {class: "form-control col-md-7 col-xs-12 text_field", :placeholder=> "Ingresa el porcentaje del impuesto"} do%>
      <%end%>
      <%if @impuesto.errors[:porcentaje].any? %>
        <p class="bg-danger"><%= @impuesto.errors[:porcentaje].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%= @impuesto.errors[:descripcion].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :descripcion, "Descripción: ", {class: "control-label col-md-3 col-sm-3 col-xs-12"} %>
    <div class="col-md-6 col-sm-6 col-xs-12 input-group">
      <span class="input-group-addon"><i class="fa fa-file-text"></i></span>
      <%= f.text_area :descripcion, {class: "form-control col-md-7 col-xs-12 text_field"} do%>
      <%end%>
      <%if @impuesto.errors[:descripcion].any? %>
        <p class="bg-danger"><%= @impuesto.errors[:descripcion].to_s[/\w([^"]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
    <%= f.submit @impuesto.new_record? ? "Crear impuesto" : "Actualizar impuesto", :class => "btn btn-success"%>
  </div>
<% end %>
