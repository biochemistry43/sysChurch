<div class="right_col" role="main">
   <div id="print-div" style="font-size: 11px; width: 200px;">
      <div class="col-md-3">
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-9" style="width: 100%; align-content: center;">
            <%= image_tag(current_user.negocio.logo_url,:width => 140, :height => 80, class: "img") if current_user.negocio.logo.present? %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12" style="text-align:center;">
            <h4 id="nombre_fiscal_negocio_ticket"> <%= @nombreFiscalNegocio %> </h4>
            <p id="dir_negocio_ticket" style="font-size: 12px;"> <%= @direccionFiscalNegocio %> </p>
            <h4 id="nombre_sucursal_ticket"> Sucursal: <%= @sucursal %> </h4>
          </div>
        </div>
        <% unless @direccionSucursal.empty? %>
          <div class="row" style="text-align: center;">
            <p id="direccion_sucursal_ticket" class="col-md-12" style="font-size: 12px;">
              <%=  @direccionSucursal %>
            </p>
          </div> 
        <% end %>
        
        <hr>

        <div class="row" style="text-align:center">
          <div id="folio_ticket" class="col-md-12" style="font-size: 12px;">
            Folio: <%= @folio %>
          </div>
        </div>
        <div class="row" style="text-align:center">
          <div id="fecha_ticket" class="col-md-12" style="font-size: 12px;">
            
          </div>
        </div>
        <div class="row">
          <div id="datos_cliente_ticket" class="col-md-12" style="font-size: 12px;">
            Cliente: <%= @cliente %>
          </div>
        </div>
        <div class="row">
          <div id="datos_cajero" class="col-md-12" style="font-size:12px;">
            Le atendi√≥: <%= @cajero %>        
          </div>
        </div>
        <div class="row">
          <div id="productos_ticket" class="col-md-12" style="width: 100%;">
            <table id="tabla_productos_ticket" class="col-md-12" style="font-size: 12px; width: 95%;">
              <thead>
                <tr style='background-color: gray;'>
                  <th style='text-align:center; border-bottom: 1px solid #ddd;'>Cant</th>
                  <th style='text-align:center; border-bottom: 1px solid #ddd;'>Prod</th>
                  <th style='text-align:center; border-bottom: 1px solid #ddd;'>Imp</th>
                </tr>  
              </thead>
              <tbody>
              <% @itemsVenta.each do |item| %>
                <tr>
                  <td style='text-align:center;'><%= item.cantidad %></td>
                  <td style='text-align:center;'><%=item.articulo.nombre%></td>
                  <td style='text-align:center;'><%=item.cantidad * item.articulo.precioVenta%></td>
                </tr>
              <% end %>
                  
              </tbody>
                
            </table>
                 
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <p id="importe_total_ticket">
              Total: <strong><%= @venta.montoVenta %></strong>     
            </p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <p id="forma_pago" style="font-size: 12px;">
              Forma de Pago: <strong><%= @formaPago %> </strong>  
              <br> 
              <% unless @formaPago.eql?("efectivo") %>
                <% @camposFormaPago.each do |campo| %>
                  <%= campo.campo_forma_pago.nombrecampo %> : <%= campo.ValorCampo %> <br>
                <% end %>             
              <% end %>         
            </p>
          </div>
        </div>


      </div>
   </div> 
</div>