<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <h1>Productos</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  
  <div class="col-md-12 col-sm-12 col-xs-12 ">
    <div>

      <table class="table table-striped responsive-utilities jambo_table data-table" id="tabla_productos">
        <thead>
          <tr>
            <th class="column-title">Clave</th>
            <th class="column-title">Nombre</th>
            <th class="column-title">Stock</th>
            <th class="column-title">Existencia</th>
            <th class="column-title">Categoria</th>
            <th colspan="3" class="column-title"></th>
          </tr>
        </thead>

        <tbody>
          <% @articulos.each do |articulo| %>
            <tr>
              <!--<td>--><%#image_tag(articulo.fotoProducto_url, :width => 65, :height => 75) if articulo.fotoProducto.present? %><!--</td>-->
              <td><%= articulo.clave %></td>
              <td><%= articulo.nombre %></td>
              <td><%= articulo.stock %></td>
              <td><%= articulo.existencia %></td>
              <td><%= articulo.cat_articulo.nombreCatArticulo %></td>
              <td><%= link_to 'Mostrar', articulo, class: "btn btn-primary btn-xs" %><i class="fa fa-folder"></i></td>
              <td><%= link_to 'Editar', edit_articulo_path(articulo), class: "btn btn-info btn-xs" %><i class="fa fa-pencil"></i></td>
              <td><%= link_to 'Eliminar', articulo, method: :delete, data: { confirm: '¿Seguro que desea borrar este artículo permanentemente?' }, class: "btn btn-danger btn-xs" %><i class="fa fa-trash-o"></i></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nuevo Artículo', new_articulo_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
