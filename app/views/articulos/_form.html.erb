<%= form_for @articulo, remote: true, :html=> {:class=>'form-horizontal form-label-left input_mask', :role=>"form"} do |f| %>
  <% if @articulo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@articulo.errors.count, "error") %> prohibited this articulo from being saved:</h2>

      <ul>
        <% @articulo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
   
  <% end %>

  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :clave %><br>
    <%= f.text_field :clave, class: "form-control has-feedback-left"%>
    <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :foto %><br>
    <%= f.file_field :fotoProducto, class: "form-control has-feedback-left" %>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre, class: "form-control has-feedback-left" %>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :descripcion %><br>
    <%= f.text_field :descripcion, class: "form-control has-feedback-left" %>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :stock %><br>
    <%= f.number_field :stock, class: "form-control has-feedback-left" %>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label :categoria %><br>
    <%= collection_select(:articulo, :cat_articulo_id, @categories, :id, :nombreCatArticulo, {:prompt => 'Select'})%>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label "Precio de Compra" %><br>
    <%= f.number_field :precioCompra, class: "form-control has-feedback-left" %>
  </div>
  <div class="field col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
    <%= f.label "Precio de Venta" %><br>
    <%= f.number_field :precioVenta, class: "form-control has-feedback-left" %>
  </div>
  <div class="ln_solid"></div>
   <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit @articulo.new_record? ? "Crear articulo" : "Actualizar articulo", :class => "btn btn-success"%>
      </div>
<% end %>

