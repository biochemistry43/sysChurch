<div class="x_content">
  <%= form_for @marca_producto, remote: true, :html=> {:class=>'form-horizontal form-label-left', :role=>"form"} do |f| %>
    
    <div class="item form-group<%= @marca_producto.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :nombre, "Nombre de marca: ", {class: "control-label col-md-3 col-sm-3 col-xs-12"} %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :nombre, {class: "form-control col-md-7 col-xs-12 text_field first_input", :placeholder=>"Introduzca el nombre de la marca..."} do%>
        <%end%>
        <%if @marca_producto.errors[:nombre].any? %>
          <p class="bg-danger"><%= @marca_producto.errors[:nombre].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>
    
     <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
          <%= f.submit @marca_producto.new_record? ? "Crear marca" : "Actualizar marca", :class => "btn btn-success"%>
        </div>
  <% end %>
</div>
