<%= form_for @gasto, remote: true, :html=> {:class=>'form-horizontal form-label-left input_mask', :role=>"form"} do |f| %>
  <% if @gasto.errors.any? %>
    <div id="error_explanation" class="bg-danger text-danger">
      <h2><%= pluralize(@gasto.count, "error") %> prohibited this cat_articulo from being saved:</h2>

      <ul>
      <% @gasto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :montoGasto %><br>
    <%= f.text_field :montoGasto %>
  </div>
  <div class="field">
    <%= f.label :fechaGasto %><br>
    <%= f.date_select :fechaGasto %>
  </div>
  <div class="field">
    <%= f.label :descripcionGasto %><br>
    <%= f.text_field :descripcionGasto %>
  </div>
  <div class="field">
    <%= f.label :lugarCompraGasto %><br>
    <%= f.text_field :lugarCompraGasto %>
  </div>
  <div class="field">
    <%= f.label :persona_id %><br>
    <%= f.number_field :persona_id %>
  </div>
  <div class="field">
    <%= f.label :categoria_gasto_id %><br>
    <%= f.number_field :categoria_gasto_id %>
  </div>
  <div class="actions">
   <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
        <%= f.submit @gasto.new_record? ? "Crear gasto" : "Actualizar gasto", :class => "btn btn-success"%>
      </div>
  </div>
<% end %>
