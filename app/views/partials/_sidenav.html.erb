
<div class="main_container">

  <div class="col-md-3 left_col">
    <div class="left_col scroll-view">

      <div class="navbar nav_title" style="border: 0;">
        <%= link_to root_path, :class => "site_title" do %>
          <i class="fa fa-cubes"></i> <span>M  Y  B  U</span>
        <% end %>
      </div>
      <div class="clearfix"></div>


      <!-- menu profile quick info -->
      <div class="profile">
        <div class="profile_pic">
          <%if current_user.perfil%>
            <%= image_tag(current_user.perfil.foto_url, class: "img-circle profile_img") if current_user.perfil.foto.present? %>
          <%end%>
        </div>
        <div class="profile_info">
          <span>Bienvenido,</span>
          <%if current_user.perfil%>
            <h2><%=current_user.perfil.nombre%></h2>
          <%else%>
            <h2><%=current_user.email%></h2>
          <%end%>
        </div>
      </div>
      <!-- /menu profile quick info -->

      <br />

      <!-- sidebar menu -->
      <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

        <div class="menu_section">
          <h3>General</h3>  
          <ul class="nav side-menu">
            <li><a><i class="fa fa-home"></i> Módulos <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><a><i class="fa fa-tags"></i>Productos<span class="fa fa-chevron-down"></span></a>
                  <ul class="nav child_menu" style="display: none">
                    <%if can? :update, CatArticulo%>
                      <li><%= link_to "Categorias", cat_articulos_path %>
                      </li>
                    <%end%>
                    <%if can? :update, Articulo%>
                      <li><%= link_to "Productos", articulos_path %>
                      </li>
                    <%end%>
                    <%if can? :update, Proveedor%>
                      <li><%= link_to "Proveedores", proveedores_path%>
                      </li>
                    <%end%>
                    <%if can? :update, Inventario%>
                      <li><%= link_to "Inventario", inventarios_path%>
                      </li>
                    <%end%>
                  </ul>
                </li>
                <li><%= link_to punto_venta_index_path, {id: "pos-mod"} do%>
                       <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                       Punto de venta
                    <%end%>
                </li>
                <%if can? :update, Banco%>
                  <li><%= link_to bancos_path do%>
                        <i class="fa fa-bank"></i>
                        Bancos
                      <%end%>
                  </li>
                <%end%>
                <%if can? :update, Cliente%>
                  <li><%= link_to clientes_path do%>
                        <i class="fa fa-users"></i>
                        Clientes
                      <%end%>
                  </li>
                <%end%>
              </ul>
              <%if can? :update, Negocio%>
                  <li><a><i class="fa fa-filter"></i>Reportes<span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu" style="display: none">
                      <li class="sub_menu"><%= link_to "Ventas", ventas_venta_del_dia_path%>
                      </li>
                    </ul>
                  </li>
                <%end%>

            </li>
            <li><a><i class="fa fa-gears"></i> Configuración <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <%if can? :update, Negocio%>
                  <li><%= link_to controller: "negocios", action: "show", id: current_user.negocio_id do%>
                        <i class="fa fa-rocket"></i>
                        Negocio
                      <% end %>
                  </li>
                  <li><%= link_to sucursals_path do%>
                        <i class="fa fa-truck"></i>
                        Sucursales
                      <% end %>
                  </li>
                  <li><%= link_to empleados_path do%>
                        <i class="fa fa-child"></i>
                        Empleados
                      <% end %>
                  </li>
                <%end%>
              </ul>
              
            </li>
          </ul>

        </div>
       

      </div>
      <!-- /sidebar menu -->

      <!-- /menu footer buttons 
      <div class="sidebar-footer hidden-small">
        <a data-toggle="tooltip" data-placement="top" title="Settings">
          <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
          <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Lock">
          <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Logout">
          <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
        </a>
      </div>-->
      <!-- /menu footer buttons -->
    </div>
    <script>

      $("#pos-mod").on("click", function(evt){
        if ($("body").hasClass('nav-md')) {
          $("body").removeClass('nav-md').addClass('nav-sm');
          $LEFT_COL.removeClass('scroll-view').removeAttr('style');

          if ($SIDEBAR_MENU.find('li').hasClass('active')) {
            $SIDEBAR_MENU.find('li.active').addClass('active-sm').removeClass('active');
          }
        } else {
          $("body").removeClass('nav-sm').addClass('nav-md');

          if ($SIDEBAR_MENU.find('li').hasClass('active-sm')) {
            $SIDEBAR_MENU.find('li.active-sm').addClass('active').removeClass('active-sm');
          }
        }

        evt.stopPropagation();

      });
      
    </script>
  </div>
