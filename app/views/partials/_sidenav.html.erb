                <li><%= link_to "Productos", articulos_path %>
                </li>
                <li><%= link_to "Inventarios", inventarios_path%>
                </li>
                <li><%= link_to "Proveedores", proveedores_path%>
                </li>
                <li><%= link_to "Bancos", bancos_path%>
                </li>
                <li><%= link_to "Clientes", clientes_path%>
                </li>
              </ul>

            </li>
            <li><a><i class="fa fa-home"></i> Configuración <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><a>Reportes<span class="fa fa-chevron-down"></span></a>
                  <ul class="nav child_menu" style="display: none">
                    <li class="sub_menu"><%= link_to "Ventas", ventas_venta_del_dia_path%>
                    </li>
                  </ul>
                </li>
                <li><%= link_to "Configuración del negocio", controller: "negocios", action: "show", id: current_user.negocio_id%>
                <li><a ><%=@hello%></a>
                </li>
              </ul>
              
            </li>
          </ul>

        </div>
       

      </div>
      <!-- /sidebar menu -->

