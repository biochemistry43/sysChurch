
<div class="main_container">

  <div class="col-md-3 left_col">
    <div class="left_col scroll-view">

      <div class="navbar nav_title" style="border: 0;">
        <%= link_to root_path, :class => "site_title" do %>
          <i class="fa fa-cubes"></i> <span>M  Y  B  U</span>
        <% end %>
      </div>
      <div class="clearfix"></div>


      <!-- menu profile quick info -->
      <div class="profile">
        <div class="profile_pic">
          <%if current_user.perfil%>
            <%= image_tag(current_user.perfil.foto_url, class: "img-circle profile_img") if current_user.perfil.foto.present? %>
          <%end%>
        </div>
        <div class="profile_info">
          <span>Bienvenido,</span>
          <%if current_user.perfil%>
            <h2><%=current_user.perfil.nombre%></h2>
          <%else%>
            <h2><%=current_user.email%></h2>
          <%end%>
        </div>
      </div>
      <!-- /menu profile quick info -->

      <br />

      <!-- sidebar menu -->
      <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

        <div class="menu_section">
          <h3>General</h3>  
          <ul class="nav side-menu">
            <li><a><i class="fa fa-home"></i> Módulos <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to "Punto de venta", punto_venta_index_path, id: "pos-mod" %>
