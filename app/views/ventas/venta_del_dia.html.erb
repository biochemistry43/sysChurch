<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <h1>Reporte de Ventas</h1>
    </div>
  </div>
  <div class="clearfix"></div>
  
  <div class="col-md-10 col-sm-10 col-xs-10">
    <div class="x_panel" style="height: 600px;">
      <p id="notice"><%= notice %></p>
      <h2>Venta del d√≠a de hoy:</h2>
      <h1>$<%=@VentaDelDia%></h1>

      <% @usuarios.each do |usuario| %>
        <h3>Venta del cajero: </h3>
        <h4><%=usuario.email%></h4>
        <% usuario.ventas.each do |venta| %>
          <% @monto += venta.montoVenta.to_f %>
        <%end%>
        <h5><%= @monto %></h5>
        <% @monto = 0.0%>
      <% end %>

      <table class="table table-striped responsive-utilities jambo_table">
        <thead>
          <tr>
            <th class="column-title">Fecha </th>
            <th class="column-title">Monto Venta</th>
            <th class="column-title">Caja #</th>
            <th class="column-title">Cajero</th>
          </tr>
        </thead>

        <tbody>
          <% @ventas.each do |venta| %>
            <tr>
              <td><%= venta.fechaVenta %></td>
              <td><%= venta.montoVenta %></td>
              <td><%= venta.caja %></td>
              <td><%= User.find(venta.user_id).email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>

    </div>
  </div>
</div>