// Add the dialog title

<%if @venta.status.eql?("Cancelada")%>
  $('#modal-ventas-title').html("<i class='fa fa-trash'></i> Venta cancelada");
  $('#modal-ventas-title').parent().css("background-color", "#ff1a1a");
  $('#modal-ventas-title').parent().css("color", "white");
<%elsif @venta.status.eql?("Con devoluciones")%>
  $('#modal-ventas-title').parent().css("background-color", "#ffd633");
  $('#modal-ventas-title').parent().css("color", "white");
  $('#modal-ventas-title').html("<i class='fa fa-warning'></i> Venta con devoluciones");
<%elsif @venta.status.eql?("Activa")%>
  $('#modal-ventas-title').parent().css("background-color", "#92c33c");
  $('#modal-ventas-title').parent().css("color", "white");
  $('#modal-ventas-title').html("<i class='fa fa-info'></i> Detalles de venta");
<%end%>



 
// Render the new form
$('.modal-body-ventas').html('<%= j render("venta") %>');
 
// Show the dynamic dialog
$('#modalVentas').modal("show");
 
// Set focus to the first element
$('#modalVentas').on('shown.bs.modal', function () {
	  $('.first_input').focus();
})